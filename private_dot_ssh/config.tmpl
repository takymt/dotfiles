# SSH Config - Common settings
# Host-specific settings should be in ~/.ssh/config.local

# Include local/private configurations first
Include ~/.ssh/config.local

# Global defaults
Host *
  IdentitiesOnly yes
  AddKeysToAgent yes
{{- if eq .chezmoi.os "darwin" }}
  UseKeychain yes
{{- end }}
  ForwardAgent yes
  ForwardX11 no
  Protocol 2
  Tunnel no
  VisualHostKey no
  ServerAliveInterval 15
  ServerAliveCountMax 5
  # Use xterm-256color for compatibility (most servers lack Ghostty terminfo)
  SetEnv TERM=xterm-256color