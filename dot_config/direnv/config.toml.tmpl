# =============================================================================
# direnv configuration
# https://direnv.net/man/direnv.toml.1.html
# =============================================================================

[global]
# Hide the diff output when loading/unloading envrc
hide_env_diff = true

[whitelist]
# Trust all .envrc files under ghq-managed repositories
prefix = [
  "{{ .chezmoi.homeDir }}/repos",
  "{{ .chezmoi.homeDir }}/.local/share/chezmoi",
]